{
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": [
      "es2019",
    ],
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*",
      ],
      "@test/*": [
        "test/*",
      ],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "./node_modules",
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],
}